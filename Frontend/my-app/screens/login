import { useState } from "react";
import { View } from "react-native";
import { Text } from "react-native";
import { Button, TextInput, Checkbox } from "react-native-paper";

function Login(props) {
  const [user, setUser] = useState({
    email: "",
    password: "",
  });

  const [rememberMe, setRememberMe] = useState(false); 
  const handleLogin = () => {
    if (rememberMe) {
      console.log("User wants to be remembered.");
    }
   props.navigation.navigate("go-seeker-dashboard");
    console.log(user);
  };

  return (
    <View style={{ margin: 50, padding: 50 }}>
      <Text style={{ textAlign: "center", fontSize: 18 }}>Login Here ðŸ¤©</Text>

      <TextInput
        mode="outlined"
        value={user.email}
        label="Enter your email"
        onChangeText={(value) => setUser({ ...user, email: value })}
      />

      <TextInput
        mode="outlined"
        value={user.password}
        label="Enter your Password"
        secureTextEntry
        onChangeText={(value) => setUser({ ...user, password: value })}
      />

      <Checkbox.Item
        label="Remember Me"
        status={rememberMe ? "checked" : "unchecked"}
        onPress={() => {
          setRememberMe(!rememberMe);
        }}
      />

      <Button onPress={handleLogin}>
        Login
      </Button>

      <Button
        onPress={() => {
          props.navigation.navigate("go-register");
        }}
      >
        New User? Register Here
      </Button>
    </View>
  );
}

export default Login;
